 */
?>

<div id="basket">
	
	<h2>Shopping Cart</h2>
    <?php echo $this->getChildHtml('form_before') ?>
    <?php echo $this->getMessagesBlock()->getGroupedHtml() ?>
	
   <?php if(!$this->hasError()): ?>
		<div class="checkout">
			<?php foreach ($this->getMethods('methods') as $method): ?>
				<?php $methodHtml = $this->getMethodHtml($method); ?>
				<?php if ($methodHtml): ?>
					<?php echo $methodHtml; ?>
				<?php endif; ?>
			<?php endforeach; ?>
		</div>
    <?php endif; ?>
	
    <form action="<?php echo $this->getUrl('checkout/cart/updatePost') ?>" method="post">
        <fieldset>
            <table id="shopping-cart-table">
				<thead>
					<tr>
						<th class="product">Product</th>
						<th class="remove">Remove</th>
						<th class="price">Unit Price</th>
						<th class="quantity">Quantity</th>
						<th class="subtotal">Subtotal</th>
					</tr>
				</thead>
                <tbody>
					<?php foreach($this->getItems() as $_item): ?>
						<?php echo $this->getItemHtml($_item) ?>
					<?php endforeach ?>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="5" class="a-right">
                            <button type="submit" name="update_cart_action" value="update_qty" title="<?php echo $this->__('Update Shopping Cart'); ?>" class="button btn-update"><?php echo $this->__('Update Shopping Cart'); ?></button>
                        </td>
                    </tr>
                </tfoot>
			</table>
		</fieldset>
	
	</form>
		
		<?php echo $this->getChildHtml('coupon') ?>
		
        <?php echo $this->getChildHtml('totals'); ?>
		
	   <?php if(!$this->hasError()): ?>
			<div class="checkout">
				<?php foreach ($this->getMethods('methods') as $method): ?>
					<?php $methodHtml = $this->getMethodHtml($method); ?>
					<?php if ($methodHtml): ?>
						<?php echo $methodHtml; ?>
					<?php endif; ?>
				<?php endforeach; ?>
			</div>
		<?php endif; ?>
	
</div>
	
